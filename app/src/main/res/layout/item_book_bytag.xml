<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/ll_book"
    android:orientation="vertical"
    >
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:transitionName="@string/transition_book_img"
        />
    <TextView
        android:textSize="10dp"
        android:id="@+id/tv_film_name"
        android:maxLines="2"
        android:gravity="left"
        android:textColor="@color/text_gray_28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textSize="10dp"
        android:id="@+id/tv_film_grade"
        android:maxLines="2"
        android:gravity="left"
        android:textColor="@color/text_gray_6"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />

</LinearLayout>
