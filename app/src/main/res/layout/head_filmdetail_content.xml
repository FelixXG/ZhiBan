<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_head"
        android:layout_height="330dp"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:id="@+id/ll_film_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        android:paddingTop="95dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        >
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/img_photo"
                android:layout_height="165dp"
                android:layout_width="120dp"
                android:layout_marginRight="15dp"
                android:transitionName="@string/transition_film_img"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="12dp"
                android:orientation="vertical"
                >
                <!--评分-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_rating_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 评分: "
                        android:textColor="@color/red_base"
                        />
                    <TextView
                        android:id="@+id/tv_rating_number"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <!--导演-->
                <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="导演: "
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_director"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    />
                    </LinearLayout>
                <!--主演-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主演:"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/tv_film_casts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:textColor="@color/white"
                        />
                    </LinearLayout>
                <!--类型-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类型:"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/tv_film_genres"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:ellipsize="end"
                        android:textColor="@color/white"
                        />
                    </LinearLayout>
                <!--上映日期-->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上映日期:"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/tv_film_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:text="上映日期"
                        android:ellipsize="end"
                        android:textColor="@color/white"
                        />
                    </LinearLayout>
                <!--制片国家/地区-->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="制片国家/地区:"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/tv_film_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:textColor="@color/white"
                        />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
